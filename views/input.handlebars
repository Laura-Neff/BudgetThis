 <p><a href="/">Home</a> |
        <a href="/transaction">Transactions</a>
    </p>
    <form action="" id="input form" style="size:60%">
        <div class="form-group">
            <label for="user">User:</label>
            <input type="text" class="form-control" id="user" placeholder="">
        </div>
        <div class="form-group">
            <label for="Type">Type:</label>
            <select class="form-control" id="type"> 
                <option>Deposit</option>
                <option>Withdrawal</option>
                <option>Credit Payment</option>
                <option>Cash Payment</option>
            </select>
        </div>

        <div class="form-group">
            <label for="amount">Amount($):</label>
            <input type="text" class="form-control" id="amount" placeholder="$$">
        </div>
        <div class="form-group">
            <label for="memo">Description:</label>
            <input type="text" class="form-control" id="memo" placeholder="Transaction Memo">
        </div>
          <button type="submit" class="btn btn-success" id="transaction-form">Create Transaction</button>
    </form>

<script>
    $(document).ready(function() {

    $(document).on("click", "#transaction-form", transactionFormSubmit);

    // A function to handle what happens when the form is submitted to create a new Author
    function transactionFormSubmit(event) {
        event.preventDefault();

        var transaction = {
            type: $("#type :selected").val(),
            memo: $("#memo").val(),
            amount: parseFloat($("#amount").val()),
            user:$("#user").val()
        }
        console.log(transaction);
        $.post("/api/transactions", transaction)
            .then(function() {
                console.log("Added transaction")
            });
    }
});
</script>